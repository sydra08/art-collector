<div id="navbar">
  <a href="/artists" class="button">Browse Artists</a>
  <a href="/artworks" class="button">Browse Artworks</a>
  <a href="/users/<%=current_user.slug%>" class="button">My Collections</a>
  <a href="/logout" class="button">Log Out</a>
</div>

<p>show a single collection with options to delete or edit</p>
<h1><%=@collection.name%></h1>
<p>
  <small>
    <form action="/collections/<%=@collection.id%>/edit" method="get">
      <input type="submit" value="Edit">
    </form>
    <form action="/collections/<%=@collection.id%>/delete" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete">
    </form>
  </small>
</p>

<ul>
<% @collection.artworks.each do |a| %>
    <li><a href="/artworks/<%=a.slug%>"><%=a.name%></a></li>
  <%end%>
</ul>
