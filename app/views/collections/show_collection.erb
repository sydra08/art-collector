<div id="navbar">
  <a href="/artists" class="button-1">Browse Artists</a>
  <a href="/artworks" class="button-1">Browse Artworks</a>
  <a href="/users/<%=current_user.slug%>" class="button-1">My Collections</a>
  <a href="/logout" class="button-1">Log Out</a>
</div>

<div class="col clearfix">
  <div class="col-two-third clearfix">
    <h1><%=@collection.name%></h1>
  </div>

  <div id="actionbar" class="col-one-third clearfix">

    <button type="submit" class="icon-button button-2">
      <a href="/artworks/new"><i class="material-icons">add_circle</i><strong>Add Artwork</a>
    </button>
    <!-- <form class="action" action="/artworks/new" method="get">
      <button type="submit" class="icon-button">
        <i class="material-icons">add_circle</i><strong>Add Artwork</strong>
      </button>
    </form> -->

    <button type="submit" class="icon-button button-2">
      <a href="/collections/<%=@collection.id%>/edit">
        <i class="material-icons">mode_edit</i><strong>Edit Name</strong></a>
    </button>

    <form class="action" action="/collections/<%=@collection.id%>/delete" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <button type="submit" class="icon-button button-2">
        <i class="material-icons">delete</i><strong>Delete Collection</strong>
      </button>
    </form>

  </div>
</div>

<ul>
  <!-- what controller action and route should handle the removal of a single artwork? -->
  <!-- does this mean the collection_artwork item gets removed? -->

<% @collection.artworks.each do |a| %>
    <li>
      <form class="action" action="/artworks/<%=a.id%>/remove" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <button type="submit" class="icon-button button-2">
          <i class="material-icons">remove_circle</i>&nbsp;
        </button>
      </form>
      <a href="/artworks/<%=a.id%>"><%=a.name%></a>
    </li>
  <%end%>
</ul>
