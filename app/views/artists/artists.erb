<div id="navbar">
  <% if logged_in? %>
    <a href="/artists" class="button-1 active">Browse Artists</a>
    <a href="/artworks" class="button-1">Browse Artworks</a>
    <a href="/users/<%=current_user.slug%>" class="button-1">My Collections</a>
    <a href="/logout" class="button-1">Log Out</a>
  <% else %>
    <a href="/signup" class="button-1">Sign Up</a>
    <a href="/artists" class="button-1 active">Browse Artists</a>
    <a href="/artworks" class="button-1">Browse Artworks</a>
  <% end %>
</div>

<h1>All Artists</h1>

<ul>
  <% Artist.sort_by_artwork_count.each do |a| %>
    <li><a href="/artists/<%=a.slug%>"><%=a.name%></a> (<%=a.artworks.count%>)</li>
  <%end%>
</ul>
