<div id="navbar">
  <% if logged_in? %>
    <!-- <a href="/artists" class="button">Browse Artists</a> -->
    <a href="/artworks" class="button">Browse Artworks</a>
    <a href="/users/<%=current_user.slug%>" class="button">My Collections</a>
    <a href="/logout" class="button">Log Out</a>
  <% else %>
    <a href="/signup" class="button">Sign Up</a>
    <!-- <a href="/artists" class="button">Browse Artists</a> -->
    <a href="/artworks" class="button">Browse Artworks</a>
  <% end %>
</div>

<p>show all artists (potentially with the artwork count next to the name) with links to each one's individual page</p>

<ul>
  <% Artist.all.each do |a| %>
    <li><a href="/artists/<%=a.slug%>"><%=a.name%></a> (<%=a.artworks.count%>)</li>
  <%end%>
</ul>
