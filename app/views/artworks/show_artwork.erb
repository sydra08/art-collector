<div id="navbar">
  <% if logged_in? %>
    <a href="/artists" class="button">Browse Artists</a>
    <a href="/artworks" class="button">Browse Artworks</a>
    <a href="/users/<%=current_user.slug%>" class="button">My Collections</a>
    <a href="/logout" class="button">Log Out</a>
  <% else %>
    <a href="/signup" class="button">Sign Up</a>
    <a href="/artists" class="button">Browse Artists</a>
    <a href="/artworks" class="button">Browse Artworks</a>
  <% end %>
</div>

<h1><%=@artwork.name%></h1>

<br/>
<p><strong>Artist: </strong> <a href="/artists/<%=@artwork.artist.slug%>"><%=@artwork.artist.name%></a></p>
<p><strong>Year(s): </strong><%=@artwork.year%></p>

<% if logged_in? %>
  <a href="/artworks/<%=@artwork.slug%>/edit">Edit</a>
<% end %>
