<div id="navbar">
  <% if logged_in? %>
    <a href="/artists" class="button-1">Browse Artists</a>
    <a href="/artworks" class="button-1">Browse Artworks</a>
    <a href="/users/<%=current_user.slug%>" class="button-1">My Collections</a>
    <a href="/logout" class="button-1">Log Out</a>
  <% else %>
    <a href="/signup" class="button-1">Sign Up</a>
    <a href="/artists" class="button-1">Browse Artists</a>
    <a href="/artworks" class="button-1">Browse Artworks</a>
  <% end %>
</div>

<h1><%=@artwork.name%></h1>

<br/>
<p><strong>Artist: </strong>
  <%if @artwork.artist == nil%>
    <em>Unknown</em>
  <%else%>
    <a href="/artists/<%=@artwork.artist.slug%>"><%=@artwork.artist.name%></a>
  <%end%>
</p>
<p><strong>Year(s): </strong><%=@artwork.year%></p>
